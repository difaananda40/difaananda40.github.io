---
import { siteConfig, defaultSEO } from "../../config/seo";

export interface Props {
    title?: string;
    description?: string;
    keywords?: string[];
    author?: string;
    image?: string;
    imageAlt?: string;
    canonical?: string;
    type?: "website" | "article" | "profile";
    publishedTime?: string;
    modifiedTime?: string;
    noindex?: boolean;
    nofollow?: boolean;
}

const {
    title = defaultSEO.title,
    description = defaultSEO.description,
    keywords = defaultSEO.keywords,
    author = defaultSEO.author,
    image = defaultSEO.image,
    imageAlt = "Difa Ananda Portfolio",
    canonical = Astro.url.href,
    type = "website",
    publishedTime,
    modifiedTime,
    noindex = defaultSEO.noindex,
    nofollow = defaultSEO.nofollow,
} = Astro.props;

const siteUrl = siteConfig.site;
const fullImageUrl = image.startsWith("http") ? image : `${siteUrl}${image}`;
const robotsContent = `${noindex ? "noindex" : "index"}, ${nofollow ? "nofollow" : "follow"}`;

// Structured data for personal website
const structuredData = {
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "Person",
            "@id": `${siteUrl}/#person`,
            name: "Difa Ananda",
            url: siteUrl,
            sameAs: [
                `https://github.com/${siteConfig.githubUsername}`,
                `https://linkedin.com/in/${siteConfig.linkedinUsername}`,
                `https://twitter.com/${siteConfig.twitterHandle.replace("@", "")}`,
            ],
            jobTitle: "Full Stack Developer & Designer",
            worksFor: {
                "@type": "Organization",
                name: "Freelance",
            },
            description: description,
            image: {
                "@type": "ImageObject",
                url: fullImageUrl,
                width: 1200,
                height: 630,
            },
            knowsAbout: [
                "Web Development",
                "Full Stack Development",
                "UI/UX Design",
                "JavaScript",
                "TypeScript",
                "React",
                "Node.js",
            ],
        },
        {
            "@type": "WebSite",
            "@id": `${siteUrl}/#website`,
            url: siteUrl,
            name: `${siteConfig.author} - Portfolio`,
            description: description,
            publisher: {
                "@id": `${siteUrl}/#person`,
            },
            inLanguage: "en-US",
        },
    ],
};
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content={keywords.join(", ")} />
<meta name="author" content={author} />
<meta name="robots" content={robotsContent} />

<!-- Canonical URL -->
<link rel="canonical" href={canonical} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonical} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageUrl} />
<meta property="og:image:alt" content={imageAlt} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:site_name" content={siteConfig.author} />
<meta property="og:locale" content="en_US" />

{
    publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
    )
}
{
    modifiedTime && (
        <meta property="article:modified_time" content={modifiedTime} />
    )
}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonical} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={fullImageUrl} />
<meta property="twitter:image:alt" content={imageAlt} />
<meta property="twitter:creator" content={siteConfig.twitterHandle} />

<!-- Additional SEO Meta Tags -->
<meta name="theme-color" content="#7c3aed" />
<meta name="msapplication-TileColor" content="#7c3aed" />

<!-- Preconnect to external domains -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

<!-- DNS Prefetch for performance -->
<link rel="dns-prefetch" href="//fonts.googleapis.com" />
<link rel="dns-prefetch" href="//fonts.gstatic.com" />
<link rel="dns-prefetch" href="//unpkg.com" />
