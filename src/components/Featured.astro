<script>
  const imgContainer = document.querySelectorAll('.img-container');
  imgContainer.forEach((img, index) => {
    let bottom = false;
    setTimeout(() => {
      setInterval(() => {
        if(!bottom) {
          img.scrollTo(0, img.scrollHeight);
          bottom = true;
        }
        else {
          img.scrollTo(0, 0);
          bottom = false;
        }
      }, 2000);
    }, 1000 * (index + 1));
  })
</script>