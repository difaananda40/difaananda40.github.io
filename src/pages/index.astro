---
import Layout from "layouts/Layout.astro";
import Jumbotron from "components/Jumbotron.astro";
import Featured from "components/Featured.astro";
import CatchMe from "components/CatchMe.astro";
import Footer from "components/Footer.astro";
import { generateKeywords } from "config/seo";

import { getCollection } from "astro:content";

const allProjects = await getCollection("projects");
const projectsWithImageFull = allProjects.filter(
    (project) => project.data.image_full,
);
const projects = projectsWithImageFull
    .sort(() => Math.random() - 0.5)
    .slice(0, 3);
---

<Layout
    description="Crafts sleek, high-quality websites with a futuristic edge. Specialized in minimalist designs that combine advanced technology with seamless usability. From smooth animations to optimized performance, turn complex ideas into simple, engaging user experiences."
    keywords={generateKeywords([
        "Portfolio",
        "Web Applications",
        "Creative Projects",
        "Modern Web",
        "Professional Portfolio",
    ])}
    type="website"
>
    <Jumbotron />
    <Featured projects={projects} />
    <CatchMe />
    <Footer />
</Layout>
