---
import Layout from 'layouts/Layout.astro';
import Works from 'components/Works.astro';
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<Layout title="by difaananda.">
	<div class="flex flex-col justify-center items-center my-32 space-y-12">
		<h1 class="font-bold text-7xl tracking-wide flex flex-col items-center justify-center dark:text-yellow-400">
			My recent works
		</h1>
	</div>
	<Works projects={projects} />
</Layout>
