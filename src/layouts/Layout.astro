---
import Header from 'components/Header.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&family=Poppins:wght@300;400;500;600;700;900&display=swap" rel="stylesheet">

		<!-- 3rd party js -->
		<script src="https://unpkg.com/@dotlottie/player-component@1.0.0/dist/dotlottie-player.js"></script>

		<!-- Google tag (gtag.js) -->
		<script type="text/partytown" src="https://www.googletagmanager.com/gtag/js?id=G-6RLXF519CB"></script>
		<script type="text/partytown">
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());

			gtag('config', 'G-6RLXF519CB');
		</script>
	</head>
	<body class="bg-lime-50 text-black
							 dark:bg-[#03001C] dark:text-white
	">
		<!-- Custom Cursor -->
		<div id="cursor"></div>
	  <!-- Bulb -->
		<div id="bulb" class="absolute w-36 sm:w-44 sm:h-44 md:w-64 h-36 md:h-64 flex -top-5 -left-10 lg:left-0 sm:top-0">
			<object id="bulb-off" data="images/bulb-off.svg" type="image/svg+xml" class="absolute w-36 sm:w-44 sm:h-44 md:w-64 h-36 md:h-64" style="opacity: 0;"></object>
			<object id="bulb-on" data="images/bulb-on.svg" type="image/svg+xml" class="absolute w-36 sm:w-44 sm:h-44 md:w-64 h-36 md:h-64" style="opacity: 0;"></object>
			<div class="w-36 sm:w-44 sm:h-44 md:w-64 h-36 md:h-64 flex items-center justify-center pt-6 relative">
				<svg id="bulb-toggler" class="w-14 h-14 rounded-full sm:cursor-pointer z-50 relative"></svg>
				<p id="bulb-toggler-text" class="absolute mt-20 ml-20 text-xs text-gray-600 dark:text-gray-300"></p>
			</div>
		</div>
		<Header />
		<main class="w-full md:w-3/4 mx-auto">
			<div class="p-10 rounded-lg">
				<slot />
			</div>
		</main>
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: Poppins, sans-serif;
	}

	* {
		scroll-behavior: smooth;
	}

	.dotted-border {
		border-style: dotted;
		border-width: 3px;
		border-image-source: url(data:image/png;base64,);
		border-image-slice: 33%;
		border-image-repeat: round;
	}
	
	#cursor {
		width: 65px;
		height: 65px;
		position: fixed;
		top: 0;
		left: 0;
		background-color: #fff;
		border-radius: 50%;
		mix-blend-mode: difference;
		z-index: 100;
		pointer-events: none;
	}
</style>

<script>
	import gsap from 'gsap'

	const cursor = document.getElementById("cursor");

	gsap.set(cursor, {xPercent: -50, yPercent: -50});

	const pos = { x: window.innerWidth / 2, y: window.innerHeight / 2 };
	const mouse = { x: pos.x, y: pos.y };
	const speed = 0.35;

	const xSet = gsap.quickSetter(cursor, "x", "px");
	const ySet = gsap.quickSetter(cursor, "y", "px");

	window.addEventListener("mousemove", e => {    
		mouse.x = e.x;
		mouse.y = e.y; 
	});

	gsap.ticker.add(() => {
		// adjust speed for higher refresh monitors
		const dt = 1.0 - Math.pow(1.0 - speed, gsap.ticker.deltaRatio()); 
		
		pos.x += (mouse.x - pos.x) * dt;
		pos.y += (mouse.y - pos.y) * dt;
		xSet(pos.x);
		ySet(pos.y);
	});
</script>